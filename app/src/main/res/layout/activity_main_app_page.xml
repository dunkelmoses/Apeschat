<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    tools:context=".MainAppPage">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomBar"
        android:id="@+id/frameFragment"
        >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        >

        <include
            layout="@layout/toolbar"
            android:id="@+id/toolBar"
            />
        <ImageView
            android:paddingTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:src="@drawable/logo"
            />
        <TextView
            android:clickable="true"
            android:id="@+id/verifyMessage"
            android:text="@string/VerifyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolBar"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            />

    </RelativeLayout>
    <ImageView
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/profilePic"
        android:background="@color/AntiqueWhite"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilePic"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="30dp"
        android:hint="Name: "

        android:id="@+id/fullName"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullName"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:hint="Username: "
        android:id="@+id/userName"
        />
    <TextView
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName"
        android:hint="Age: "
        android:id="@+id/age"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AboutMe"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/aboutMe"
        android:layout_below="@id/age"
        android:layout_marginTop="30dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/aboutMe"
        >
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bio"
            android:clickable="true"
            />
    </RelativeLayout>

    <Button
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/friendProfile"
        android:layout_centerVertical="true"
        android:layout_above="@+id/goToSearch"
        android:text="friend profile"
        />
    <Button
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/goToSearch"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:text="Search"
        />
</RelativeLayout>
    </FrameLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/bottomBar"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_bar_menu"
        android:background="@color/BottomBarBolor"
        app:labelVisibilityMode="unlabeled"

        />


</RelativeLayout>