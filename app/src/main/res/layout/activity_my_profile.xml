<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".MyProfile">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolBar"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myName"
        android:layout_below="@+id/toolBar"
        android:layout_centerHorizontal="true"
        android:textColor="@color/backgroundColor"
        android:textSize="35dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myAge"
        android:layout_below="@+id/myName"
        android:textColor="@color/backgroundColor"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"

        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/myProfileImage"
        android:layout_below="@id/myAge"
        android:layout_centerHorizontal="true"

        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/myBio"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:id="@+id/icon1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/icons8location"

        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/myBio"
        android:layout_marginBottom="50dp"
        android:layout_toLeftOf="@+id/icon1"
        android:src="@drawable/icons8exclamation"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/myBio"
        android:layout_marginBottom="50dp"
        android:layout_toRightOf="@+id/icon1"
        android:src="@drawable/icons8settings"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/bottomBar"
        android:id="@+id/myBio"
        android:padding="12dp"
        android:textSize="15dp"
        android:textColor="@color/backgroundColor"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/bottomBar"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_bar_menu"
        android:background="@color/BottomBarBolor"
        app:labelVisibilityMode="unlabeled"
        app:itemIconTint="@drawable/bottom_nav_icon_color_selector"
        app:itemTextColor="@drawable/bottom_nav_icon_color_selector"
        />

</RelativeLayout>